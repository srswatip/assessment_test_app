<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/register_first_first_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/register_user_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Username"
                    android:textColor="#FF808080"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_user_name_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="16sp" />
            </LinearLayout>

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:id="@+id/register_first_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp" />

            <LinearLayout
                android:id="@+id/register_first_second_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/register_password_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Password"
                    android:textColor="#FF808080"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_password_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textSize="16sp" />
            </LinearLayout>

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:id="@+id/register_second_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp" />

            <LinearLayout
                android:id="@+id/register_first_third_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/register_password_again_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Konfirmasi Password"
                    android:textColor="#FF808080"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_password_again_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textSize="16sp" />
            </LinearLayout>

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:id="@+id/register_third_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp" />

            <LinearLayout
                android:id="@+id/register_first_fourth_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/register_phone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Nomor Telepon"
                    android:textColor="#FF808080"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_phone_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="phone"
                    android:textSize="16sp" />
            </LinearLayout>

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:id="@+id/register_fourth_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp" />

            <LinearLayout
                android:id="@+id/register_first_fifth_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/register_mail_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Email"
                    android:textColor="#FF808080"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_mail_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="16sp" />
            </LinearLayout>

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:id="@+id/register_fifth_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp" />

            <LinearLayout
                android:id="@+id/register_first_sixth_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFF"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/register_id_card_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Nomor Identitas"
                    android:textColor="#FF808080"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/register_id_card_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="text"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/register_register_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="Register"
                android:textColor="#FFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>