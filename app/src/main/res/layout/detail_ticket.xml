<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/detail_yesterday_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3498DB"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="One Day Before"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#3498DB"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detail_from_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_tomorrow_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3498DB"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Besok"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/detail_from_station"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Jogja"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/detail_from_time_layout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/detail_from_station"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_from_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="11.00"
                    android:textColor="#3498DB"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keberangkatan"
                    android:textColor="#3498DB"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/detail_from_time_layout"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#3498DB"
                    android:layout_gravity="center_vertical"
                    android:text="Awal"
                    android:textColor="ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/start_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Kota Asal"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/detail_bus_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="PO Maju"
                android:textColor="#3498DB"
                android:textSize="16sp"
                android:textStyle="bold" />

            <edu.ucas.bookingticket.view.Jogja
                android:id="@+id/detail_jogja"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/detail_bus_name"
                android:gravity="center" />

            <TextView
                android:id="@+id/detail_consume_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_jogja"
                android:layout_centerHorizontal="true"
                android:text="Durasi Perjalanan"
                android:textColor="#95A5A6"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/detail_to_station"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Pekalongan"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/detail_to_time_layout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/detail_to_station"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/detail_to_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="17.00"
                    android:textColor="#3498DB"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kedatangan"
                    android:textColor="#3498DB"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/detail_to_time_layout"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="#3498DB"
                    android:text="Akhir"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/end_station_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota Tujuan"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/detail_bus_station_info_layout"
            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:orientation="vertical" >

            <binar.co.id.busticketingreservationpomaju.view.DownIcon
                android:id="@+id/detail_bus_station_info"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:orientation="vertical"
            >
            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:baselineAligned="false"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/detail_first_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/detail_first_level_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Kelas Ekonomi"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/detail_first_level_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/detail_first_level_name"
                    android:text="Detail Tiket Kelas Ekonomi"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/detail_first_level_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/detail_first_level_count"
                    android:text="Tarif Tiket Kelas Ekonomi"
                    android:textSize="14sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detail_second_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/detail_second_level_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Kelas AC"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/detail_second_level_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/detail_second_level_name"
                    android:text="Detail Tiket Kelas AC"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/detail_second_level_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/detail_second_level_count"
                    android:text="Tarif Tiket Kelas AC"
                    android:textSize="14sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/detail_third_level"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/detail_third_level_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Kelas Patas"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/detail_third_level_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/detail_third_level_name"
                    android:text="Detail Tiket Kelas Patas"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/detail_third_level_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/detail_third_level_count"
                    android:text="Tarif Tiket Kelas Patas"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:orientation="vertical"
            >

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:baselineAligned="false"

            android:orientation="vertical"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/change_background"
                android:gravity="center"
                android:text="Tambah Penumpang"
                android:textSize="16sp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>