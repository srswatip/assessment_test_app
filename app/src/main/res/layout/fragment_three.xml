<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- layout pertama begin -->

    <LinearLayout
        android:id="@+id/my_info_first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFF"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/my_info_first_first_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/change_background"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_info_login_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Login"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_first_second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:id="@+id/my_info_first_layout_first_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_first_third_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/change_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_info_register_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Register"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- layout pertama end -->
    <!-- layout kedua begin -->

    <LinearLayout
        android:id="@+id/my_info_second_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#FFF"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/my_info_second_first_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/change_background"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_info_select_bus_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Pilih Bus"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_second_second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:id="@+id/my_info_second_layout_first_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_second_third_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/change_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_info_select_ticket_price_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Tarif Tiket"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_second_fourth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:id="@+id/my_info_second_layout_second_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_second_fifth_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/change_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_info_select_sale_location_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Lokasi Awal"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_second_sixth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <binar.co.id.busticketingreservationpomaju.view.LineView
                android:id="@+id/my_info_second_layout_third_line"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_second_seventh_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/change_background"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_info_select_bus_station_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Lokasi Tujuan"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>